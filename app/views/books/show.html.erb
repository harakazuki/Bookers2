<%= render 'left', user: @user, book: @book %>

<h1>Book detail</h1>
<table>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.user.name, user_path(book.user) %></td>
        <td>
          <% if current_user == book.user %>
            <%= link_to 'Edit', edit_book_path(book) %>
            <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>