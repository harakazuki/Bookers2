<h1>User info</h1>
<table>
  <tbody>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
    </tr>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <td>
        <div class="row">
          <%= link_to edit_user_path(user), class: 'btn btn-secondary' do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
      </td>
    </tr>
  </tbody>
</table>


